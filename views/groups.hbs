<!-- leave group -->
<div id="modal1" class="modal">
  <div class="modal-content container">

    <div class="row">
      <div class="col s12">
        <h4>Leave Group</h4>
        <p>Are you sure you want to leave <b>{{ group }}</b>?</p>
      </div>
    </div>

    <!-- cancel and confirm buttons -->
    <div class="center-align">
      <div class="row">
        <a href="#!" class="modal-action modal-close waves-effect waves-red red btn">Cancel</a>
        <a href="#!" class="modal-action modal-close waves-effect waves-green green btn">Confirm</a>
      </div>
    </div>

  </div>
</div>

<!-- invite members to group -->
<div id="modal2" class="modal">
  <div class="modal-content container">

    <div class="row">
      <div class="col s12">
        <h4>Invite Members to {{ group }}</h4>
      </div>
    </div>

    <!-- search bar -->
    <div class="center-align">
      <div class="row">
        <form>
          <div class="input-field col s12">
            <i class="material-icons prefix">search</i>
            <input type="text" id="invite-autocomplete" class="autocomplete autocomplete-friends" required placeholder="Name">
            <label for="invite-autocomplete">Member</label>
          </div>
        </form>
      </div>
    </div>

    <!-- list friends currently invited -->
    <div class="row">
      <div class="col s8">
        <h5>Inviting:</h5>
      </div>
    </div>

    <!-- cancel and invite buttons -->
    <div class="center-align">
      <div class="row">
        <a href="#!" class="modal-action modal-close waves-effect waves-red red btn">Cancel</a>
        <a href="#!" class="modal-action modal-close waves-effect waves-green green btn">Invite</a>
      </div>
    </div>

  </div>
</div>
