<!-- edit bio popup -->
<div id="edit-bio" class="modal atlassian left-align white-text">
  <div class="modal-content container">

    <div class="row">
      <h4 class="orange-text" style="display:inline-block;">Edit Personal Bio</h4>
    </div>

    <div class="row">
      <div class="input-field col s12">
        <textarea id="new-bio-text" class="materialize-textarea" placeholder="No bio yet." maxlength="1000"></textarea>
        <!--<label for="new-bio-text">Bio</label>-->
      </div>
    </div>

    <div class="row">
      <a href="#!" class="modal-action modal-close waves-effect waves-red red btn">Cancel</a>
      <a id="update-bio" href="#!" class="modal-action modal-close waves-effect waves-green green btn" onclick="Materialize.toast('Bio updated', 1250)">Update Bio</a>
    </div>

  </div>
</div>

