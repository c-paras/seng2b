  <!-- Modal Structure -->
  <div id="modal1" class="modal atlassian center-align white-text">
    <div class="modal-content container">
      <div class="row">
        <h4 class=" orange-text" style="display:inline-block;">\{{stock_symbol}} | <span> \{{company_name}}</span></h4>
        <h3><span class="company-price">$103.4</span> <small class="spaceship-text">(+0.13%)</small></h3>
      </div>
      <div class="row center-align" >
        <div class="col s2">
          <a href="#" @click="amount--" style="color:white;"><i class="medium material-icons">remove</i></a>
        </div>
        <div class="col s8">
          <input type="number" v-model.number="amount" style="font-size: 40px; text-align:center;">
        </div>
        <div class="col s2">
          <a href="#"  @click="amount++" style="color:white;"><i class="medium material-icons">add</i></a>
        </div>

      </div>
      <div class="row">
        <a href="#!" @click="toggleMessage" class="waves-effect waves-blue blue btn">\{{message}}</a>
      </div>
      <div class="row" id="price-calculation">
        <h5 v-if="dollars">$\{{amount}} / \{{share_price}} units = \{{calculateCost}} share(s)</h5>
        <h5 v-else=>\{{amount}} units * $\{{share_price}} = $\{{calculateCost}}</h5>
      </div>
      <div class="row">
        <h5>Current Balance: \{{balance}}</h5>
        <h5>Balance after transaction: \{{(balance - calculateCost).toFixed(2)}}</h5>
      </div>
      <div class="row">
        <a href="#!" class="modal-action modal-close waves-effect waves-red red btn">Cancel</a>
        <a href="#!" id="confirm-buy" class="modal-action modal-close waves-effect waves-green green btn" onclick="Materialize.toast('Trade successful', 1250)" @click="buyStock">Confirm</a>
      </div>
    </div>
  </div>

