<div id="elem1">
  <div class="row">
    <div class="col s12 m12">
      <div class="card atlassian">
        <div class="card-content white-text">
          <div class="row">
            <div class="col s8" style="padding-left:0px;">
              <span class="card-title orange-text" id="company-name" style="display:inline-block;">{{stock}} | <span>{{company}}</span></span>
            </div>

            <div class="col s4" align="right">
              <a class="waves-effect waves-light btn modal-trigger" href="#modal1" @click="long = true">Long</a>
              <a class="waves-effect waves-light btn modal-trigger orange" href="#modal1" @click="long = false">Short</a>
            </div>
          </div>

          <h3><span class="company-price">Loading</span> <small id="company-change" class="spaceship-text">(+0.13%)</small></h3>

          <div class="row">
            <div class="col s9" style="padding-left:0px;">
              <p id="company-overview"></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col s12">
      <div class="row">
        <div class="col s12">
          <ul class="tabs">
            <li class="tab col s4"><a class="active" href="#graphs">Graphs</a></li>
            <li class="tab col s4"><a href="#news">News</a></li>
            <li class="tab col s4"><a href="#info">Company Information</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- news tab -->
  <div id="news" class="col s12">
    <ul id="news-articles-list" class="collection atlassian-text" style="border:1px solid rgba(44, 62, 80, 0.52)">
    </ul>
  </div>

  <!-- company info tab -->
  <div id="info" class="row">
    <div class="row">
      <div class="col s12">
        <h4>At a Glance</h4>
      </div>
      <div class="input-field col s2">
        <i class="medium material-icons prefix">settings</i>
        <input disabled value="Unknown" id="industry" type="text" class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Unknown">
        <label for="industry">Industry</label>
      </div>
      <div class="input-field col s2">
        <i class="medium material-icons prefix">history</i>
        <input disabled value="Unknown" id="founded" type="text" class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Unknown">
        <label for="founded">Founded</label>
      </div>
      <div class="input-field col s2">
        <i class="medium material-icons prefix">location_city</i>
        <input disabled value="Unknown" id="headquarters" type="text" class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Unknown">
        <label for="headquarters">Headquarters</label>
      </div>
      <div class="input-field col s2">
        <i class="medium material-icons prefix">person_outline</i>
        <input disabled value="Unknown" id="ceo" type="text" class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Unknown">
        <label id="ceo-label" for="ceo">CEO</label>
      </div>
      <div class="input-field col s2">
        <i class="medium material-icons prefix">people_outline</i>
        <input disabled value="Unknown" id="employees" type="text" class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Unknown">
        <label for="employees">Number of Employees</label>
      </div>
    </div>

    <div class="row">
      <div class="col s8">
        <h4>Overview</h4>
        <p id="company-summary">Summary of {{ company }}</p>
      </div>
    </div>

