<div class="row">
  <div class="col s12 m12">
    <div class="card atlassian">
      <div class="card-content white-text">
        <span class="card-title orange-text" id="company-name" style="display:inline-block;">{{stock}} | <span>{{company}}</span></span>
        <h3><span id="company-price">$103.4</span> <small class="spaceship-text">(+0.13%)</small></h3>
        <div class="row">
          <div class="col s10" style="padding-left:0px;">
            <p id="company-summary">Amazon.com  is an American electronic commerce and cloud computing company based in Seattle, Washington that was founded by Jeff Bezos on July 5, 1994.</p>
          </div>
          <div class="col s2">
            <a class="waves-effect waves-light btn modal-trigger" href="#modal1">Buy</a>
            <a class="waves-effect waves-light btn modal-trigger orange" href="#modal1">Sell</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
    <div class="col s12">
        <div class="row">
            <div class="col s12">
              <ul class="tabs">
                  <li class="tab col s4"><a class="active" href="#graphs">Graphs</a></li>
                  <li class="tab col s4"><a href="#news">News</a></li>
                  <li class="tab col s4"><a href="#info">Company Information</a></li>
              </ul>
            </div>
        </div>
    </div>
</div>

<!-- news tab -->
<div id="news" class="col s12">
  <h1>News!</h1>
</div>

<!-- company info tab -->
<div id="info" class="row">
  <div class="col s7">
    <h4>Overview</h3>
    <p id="company-summary">Summary of {{ company }}</p>
  </div>

  <div class="col s7">
    <h4>At a Glance</h3>
    <table class="striped">
      <tbody>
        <tr>
          <td>Industry</td>
          <td id="industry">Unknown</td>
        </tr>
        <tr>
          <td>Founded</td>
          <td id="founded">Unknown</td>
        </tr>
        <tr>
          <td>Headquarters</td>
          <td id="headquarters">Unknown</td>
        </tr>
        <tr>
          <td>CEO</td>
          <td id="ceo">Unknown</td>
        </tr>
        <tr>
          <td>Number of Employees</td>
          <td id="employees">Unknown</td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="col s7">
    <h4 id="finances-year">Finances</h3>
    <table class="striped">
      <tbody>
        <tr>
          <td>Revenue</td>
          <td id="revenue">Unknown</td>
        </tr>
        <tr>
          <td>Operating Income</td>
          <td id="operating-income">Unknown</td>
        </tr>
        <tr>
          <td>Net Income</td>
          <td id="net-income">Unknown</td>
        </tr>
        <tr>
          <td>Total Assets</td>
          <td id="total-assets">Unknown</td>
        </tr>
        <tr>
          <td>Total Equity</td>
          <td id="total-equity">Unknown</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div id="graphs" class="row">
  <div class="col s6 offset-s3">
    <ul class="tabs" id="graph-tabs">
        <li class="tab col s4"><a class="active" href="#graph1">Intraday</a></li>
        <li class="tab col s4"><a href="#graph2">Candlestick</a></li>
        <li class="tab col s4"><a href="#graph3">Drawable</a></li>
    </ul>
  </div>

  <!-- graph tabs -->
  <div id="graph1" class="col s12">
    <div class="center-align" id="graph1Loader" style="margin-top:50px;">
      <div class="preloader-wrapper active">
        <div class="spinner-layer spinner">
          <div class="circle-clipper left">
            <div class="circle"></div>
          </div><div class="gap-patch">
            <div class="circle"></div>
          </div><div class="circle-clipper right">
            <div class="circle"></div>
          </div>
        </div>
      </div>
    </div>

    <div id="chartdiv1" style="width:97%; height:400px; margin-top:30px;"></div>
  </div>
  <div id="graph2" class="col s12">

    <div class="center-align" id="graph2Loader" style="margin-top:50px;">
      <div class="preloader-wrapper active">
        <div class="spinner-layer spinner">
          <div class="circle-clipper left">
            <div class="circle"></div>
          </div><div class="gap-patch">
            <div class="circle"></div>
          </div><div class="circle-clipper right">
            <div class="circle"></div>
          </div>
        </div>
      </div>
    </div>

    <div id="chartdiv2" style="width:97%; height:400px;"></div>
  </div>
  <div id="graph3" class="col s12">

    <div class="center-align" id="graph3Loader" style="margin-top:50px;">
      <div class="preloader-wrapper active">
        <div class="spinner-layer spinner">
          <div class="circle-clipper left">
            <div class="circle"></div>
          </div><div class="gap-patch">
            <div class="circle"></div>
          </div><div class="circle-clipper right">
            <div class="circle"></div>
          </div>
        </div>
      </div>
    </div>

    <div id="chartdiv3" style="width:97%; height:400px;"></div>
  </div>
</div>



<!-- Modal Structure -->
<div id="modal1" class="modal atlassian center-align white-text">
  <div class="modal-content container">
    <div class="row">
      <h4 class=" orange-text" id="company-name" style="display:inline-block;">{{stock}} | <span>{{company}}</h4>
      <h3><span id="company-price">$103.4</span> <small class="spaceship-text">(+0.13%)</small></h3>
    </div>
    <div class="row center-align" >
      <div class="col s2">
        <a href="#" style="color:white;" id="subtractValue"><i class="medium material-icons">remove</i></a>
      </div>
      <div class="col s8">
        <input type="number" id="tradeAmount" value="50" style="font-size: 40px; text-align:center;">
      </div>
      <div class="col s2">
        <a href="#" style="color:white;" id="addValue"><i class="medium material-icons">add</i></a>
      </div>

    </div>
    <div class="row">
       <a href="#!" class="waves-effect waves-blue blue btn" id="toggleUnits">Dollars</a>
    </div>
    <div class="row">
      <h5 class="">103.8 * $16 = $1,664.8 </h5>
    </div>
    <div class="row">
      <h5> Current Balance: $9928.77</h5>
      <h5> Balance after transaction: $8,267.9</h5>
    </div>
    <div class="row">
      <a href="#!" class="modal-action modal-close waves-effect waves-red red btn">Cancel</a>
      <a href="#!" class="modal-action modal-close waves-effect waves-green green btn">Confirm</a>
    </div>
  </div>
</div>
